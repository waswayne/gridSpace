    "winston": "^3.13.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^4.0.4"

{
  "name": "gridspace-backend",
  "version": "1.0.0",
  "description": "Production-ready Express.js backend for GridSpace platform",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "npx nodemon --watch src --exec node src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "cross-env CI=true JWT_SECRET=3f02b4b1b61a24c2e3a2cf8e91a8c7128e6df94bce9c6f00e5cdbf84af57d7b3 REFRESH_TOKEN_SECRET=5a7f3c29e82f0146c5a94d02b21d3e5a07c16d83e2f445b8f29b9adf88c7dce1 MONGO_URI=mongodb://localhost:27017 vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "cross-env CI=true JWT_SECRET=3f02b4b1b61a24c2e3a2cf8e91a8c7128e6df94bce9c6f00e5cdbf84af57d7b3 REFRESH_TOKEN_SECRET=5a7f3c29e82f0146c5a94d02b21d3e5a07c16d83e2f445b8f29b9adf88c7dce1 MONGO_URI=mongodb://localhost:27017 vitest run",
    "test:smoke": "cross-env CI=true vitest run tests/integration/workspaces.smoke.spec.js"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "keywords": [
    "express",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.0.0",
    "express-request-id": "^1.4.1",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "prom-client": "^15.1.3",

# Application runtime environment (development, test, production)
NODE_ENV=development

# HTTP server port
PORT=3000

# Winston log level
LOG_LEVEL=info

# Rate limiter window duration in milliseconds
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per IP per window
RATE_LIMIT_MAX=100

# Prometheus metrics toggle (set to true to expose /metrics endpoint)
METRICS_ENABLED=false

# Frontend domains allowed to call the API (comma separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Authentication / Tokens
JWT_SECRET=3f02b4b1b61a24c2e3a2cf8e91a8c7128e6df94bce9c6f00e5cdbf84af57d7b3
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=5a7f3c29e82f0146c5a94d02b21d3e5a07c16d83e2f445b8f29b9adf88c7dce1
REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_RESET_TTL_MINUTES=60
EMAIL_VERIFICATION_TTL_MINUTES=30
AUTH_OTP_COOLDOWN_SECONDS=60
AUTH_OTP_MAX_PER_HOUR=5

# Cloudinary configuration (required for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email configuration (choose Resend or SMTP)
MAIL_FROM_ADDRESS=gridspace@example.com
MAIL_FROM_NAME=GridSpace
MAIL_FRONTEND_BASE_URL=http://localhost:3000
# Option A: Resend API (preferred in hosted environments)
RESEND_API_KEY=
# Note: Resend API is a transactional email service that requires an API key.
# Option B: Use well-known service (e.g. gmail) with app password
MAIL_SMTP_SERVICE=
MAIL_SMTP_USER=
MAIL_SMTP_APP_PASSWORD=
# Option B: Custom SMTP host
MAIL_SMTP_HOST=
MAIL_SMTP_PORT=587
MAIL_SMTP_SECURE=false
MAIL_SMTP_PASS=

# Google OAuth configuration
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=

# MongoDB connection string (include credentials/params as needed)
MONGO_URI=mongodb://localhost:27017
# Default database name for the application
MONGO_DB_NAME=gridspace
# Maximum number of connections in the MongoDB pool
MONGO_MAX_POOL_SIZE=10
# Minimum number of idle connections in the MongoDB pool
MONGO_MIN_POOL_SIZE=0
# MongoDB driver connection timeout (ms)
MONGO_CONNECT_TIMEOUT_MS=10000
# MongoDB socket timeout for operations (ms)
MONGO_SOCKET_TIMEOUT_MS=45000
